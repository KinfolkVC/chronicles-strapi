{
  "kind": "collectionType",
  "collectionName": "insights",
  "info": {
    "singularName": "insight",
    "pluralName": "insights",
    "displayName": "Insights",
    "description": ""
  },
  "options": {
    "draftAndPublish": true,
    "populateCreatorFields": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "text",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "mainContent": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      },
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "subcategory": {
      "type": "enumeration",
      "enum": [
        "Design",
        "Engineering",
        "Finance",
        "Impact",
        "Investment",
        "Law and Regulations",
        "SDGs",
        "Technology"
      ],
      "required": true
    },
    "pushToSubscribers": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "emailTitle": {
      "type": "text",
      "unique": true
    },
    "emailContent": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "emailCTAUrl": {
      "type": "text"
    },
    "spotifyUrl": {
      "type": "string",
      "unique": true
    }
  }
}
